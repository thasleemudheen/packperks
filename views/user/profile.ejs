<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    /* Custom Styles */
    body {
      background-color: #fdfdfd;
      font-family: Arial, sans-serif;
    }
    .profile-container {
      max-width: 600px;
      margin: 20px auto;
      background-color: #ddebff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }
    .profile-header {
      padding: 20px;
      text-align: center;
      border-bottom: 1px solid #3a454f;
      margin-bottom: 20px;
    }
    .profile-picture {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
    }
    .profile-header h2 {
      margin-bottom: 10px;
      color: #333;
    }
    .profile-header p {
      color: #666;
    }
    .options {
      margin-top: 20px;
    }
    .options a {
      display: block;
      padding: 10px 0;
      color: #333;
      text-decoration: none;
      border-bottom: 1px solid #dee2e6;
    }
    .options a:last-child {
      border-bottom: none;
    }
    .options a:hover {
      background-color: #11171d;
      color: white;
    }
  </style>
</head>
<body>

<div class="container profile-container">
  <div class="profile-header">
    <!-- <img src="profile-picture.jpg" alt="Profile Picture" class="profile-picture"> -->
   <h1>Hello: <%=user.username%></h1>
   <p><%=user.email%></p>
  </div>
  <div class="options">
    <a href="/wishlist"><i class="fas fa-heart"></i> Wishlist</a>
    <a href="#" onclick="toggleAddress()"><i class="fas fa-map-marker-alt"></i>ADDRESS</a>
    <div id="address" style="display: none;">
      <!-- <button>Add Adress</button> -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add Address</button>


      
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">ADD NEW ADDRESS</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/addAddress " method="post">
                <div class="mb-3">
                  <label for="name" class="col-form-label">name</label>
                  <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                  <label for="houseNumber" class="col-form-label">house number</label>
                  <input type="text" class="form-control" id="houseNumber" name="houseNumber">
                  <label for="city" class="col-form-label">City</label>
                  <input type="text" class="form-control" id="city" name="city">
                  <label for="street" class="col-form-label">street Name</label>
                  <input type="text" class="form-control" id="street" name="street">
                  <label for="pincode" class="col-form-label">pin code</label>
                  <input type="number" class="form-control" id="pincode" name="pincode">
                  <label for="phoneNumber" class="col-form-label" >Phone Number</label>
                  <input type="number" class="form-control" id="phoneNumber" name="phoneNumber">
                </div>
              
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">save address</button>
            </div>
          </form>
          </div>
        </div>
      </div>
      


  <div  >
    <% user.address.forEach(address=>{%>
      <div id="userProfile" style="border: 2px solid gray; display: flex ; justify-content: space-between; margin-bottom: 10px;" >
        <div>
        <span><h6><%=address.name%> <span> <br> <%=address.phonenumber%> </span> </h6> </span>
        <span> <%=address.houseNumber%> </span>
        <span> <%=address.city%>  </span>
        <span> <%=address.street%>  </span><br>
        <span>PIN: <%=address.pincode%> </span><br>
      </div>
      
      <div  >

         <a href="/editAddress/<%=address._id%>" ><i style="color: blue;" class="fas fa-edit"></i></a> 
        <!-- Edit Address Modal -->
        <form action="/deleteAddress/<%=address._id%>" method="post">
          <button type="submit" style="background: none; border: none;">
              <i style="color: red;" class="fas fa-trash-alt delete-icon"></i>
          </button>
      </form>         
      </div>
    </div>
   <%})%>
  </div>


    </div>
    <!-- <a href="#"><i class="fas fa-lock"></i> Change Password</a> -->
    <a href="/logOut"><i class="fas fa-sign-out-alt"></i> Logout</a>
    <a href="/">homepage</a>
  </div>
</div>

<script>

      // const editbtn=document.getElementsByClassName('btn-delete').addEventListerner


  function toggleAddress() {
    var address = document.getElementById("address");
    if (address.style.display === "none") {
      address.style.display = "block";
    } else {
      address.style.display = "none";
    }
  }



  </script>
  

<!-- Bootstrap JS Bundle (Popper.js + Bootstrap JS) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<!-- Font Awesome -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>